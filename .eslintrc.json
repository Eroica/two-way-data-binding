{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": ["jest"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "Proxy": true
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-underscore-dangle": "off",
    "semi": ["error", "always"],
    "import/prefer-default-export": "off",
    "no-param-reassign": "off",
    "global-require": "off",
    "quotes": ["error", "backtick"]
  }
}